@page
@model SimpleMessaging.UI.Pages.Messages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Message.Id" />
            <div class="form-group">
                <label asp-for="Message.CategoryId" class="control-label"></label>
                <select asp-for="Message.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Message.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.CreatorId" class="control-label"></label>
                <select asp-for="Message.CreatorId" class="form-control" asp-items="ViewBag.CreatorId"></select>
                <span asp-validation-for="Message.CreatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Body" class="control-label"></label>
                <input asp-for="Message.Body" class="form-control" />
                <span asp-validation-for="Message.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.PostDate" class="control-label"></label>
                <input asp-for="Message.PostDate" class="form-control" />
                <span asp-validation-for="Message.PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
